@{
    ViewData["Title"] = "Chi Tiết Đặt Phòng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #FF6600;
            --light-orange: #FFE6D9;
            --dark-color: #333333;
            --light-color: #FFFFFF;
            --border-color: #DDDDDD;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            color: var(--dark-color);
            line-height: 1.6;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: var(--light-color);
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
            color: var(--primary-color);
            font-weight: bold;
            font-size: 24px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--primary-color);
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .room-card {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 15px;
            display: grid;
            grid-template-columns: 150px 1fr;
            gap: 15px;
            position: relative;
        }

        .room-image {
            width: 100%;
            height: 150px;
            background-color: #eee;
            border: 1px dashed var(--border-color);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #999;
            font-size: 12px;
        }

        img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .room-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .room-info {
            grid-column: 1 / 2;
        }

        .check-times {
            grid-column: 3/ 3;
        }

        .info-item {
            margin-bottom: 8px;
            display: flex;
        }

        .info-price {
            position: absolute;
            bottom: 20px;
            right: 50px;
        }

        .value-price {
            color: var(--primary-color);
            font-weight: 500;
        }

        .label {
            font-weight: bold;
            color: var(--primary-color);
            margin-bottom: 3px;
            font-size: 14px;
        }

        .value {
            font-size: 14px;
            margin-left: 5px;
        }

        .guest-info {
            margin-top: 30px;
            border-top: 1px solid var(--border-color);
            padding-top: 20px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--border-color);
            border-radius: 4px;
            font-size: 14px;
        }

        .payment-info {
            background-color: var(--light-orange);
            padding: 15px;
            border-radius: 8px;
            margin-top: 20px;
        }

        .price-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-bottom: 10px;
        }

        .btn-submit {
            text-decoration: none;
            text-align: center;
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 4px;
            font-weight: bold;
            cursor: pointer;
            width: 100%;
            margin-top: 20px;
            font-size: 16px;
            transition: background-color 0.3s;
            text-transform: uppercase;
        }

        .btn-submit:hover {
            background-color: #E55A00;
        }

        .footer {
            text-align: center;
            font-size: 12px;
            color: #999;
            margin-top: 30px;
        }

        /* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    align-items: center;
    justify-content: center;
}

.modal-content {
    background-color: white;
    border-radius: 10px;
    padding: 25px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.15);
    position: relative;
}

.close-modal {
    position: absolute;
    right: 20px;
    top: 15px;
    font-size: 28px;
    font-weight: bold;
    color: #999;
    cursor: pointer;
}

.close-modal:hover {
    color: #333;
}

.modal h2 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 22px;
}

.modal p {
    margin-bottom: 15px;
    color: #555;
}

.modal-notice {
    font-size: 14px;
    background-color: #FFF3E0;
    padding: 12px;
    border-left: 3px solid var(--primary-color);
    border-radius: 4px;
    margin-bottom: 20px;
}

.modal-buttons {
    display: flex;
    justify-content: flex-end;
    gap: 12px;
}

.btn-confirm {
    background-color: var(--primary-color);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
}

.btn-confirm:hover {
    background-color: #E55A00;
}

.btn-cancel {
    background-color: #eee;
    color: #555;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
}

.btn-cancel:hover {
    background-color: #ddd;
}

       
    </style>
</head>

