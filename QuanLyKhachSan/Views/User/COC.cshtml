@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/coc.css" asp-append-version="true" />
    <main>
        <h2>DANH SÁCH ĐẶT PHÒNG</h2>
        <section class="room-list">
            <div class="room-item">
                <div class="room-image">Ảnh mô tả</div>
                <div class="room-info">
                    <p><strong>Số phòng:</strong> {roomID}</p>
                    <p><strong>Kiểu phòng:</strong> {roomType}</p>
                    <p><strong>Sức chứa:</strong> {capacity}</p>
                    <p><strong>Thời gian checkin:</strong> hh:mm - dd/MM/YYYY</p>
                    <p><strong>Thời gian checkout:</strong> hh:mm - dd/MM/YYYY</p>
                    <p><strong>Giá:</strong> {giá}/ngày</p>
                </div>
            </div>

            <div class="room-item">
                <div class="room-image">Ảnh mô tả</div>
                <div class="room-info">
                    <p><strong>Số phòng:</strong> {roomID}</p>
                    <p><strong>Kiểu phòng:</strong> {roomType}</p>
                    <p><strong>Sức chứa:</strong> {capacity}</p>
                    <p><strong>Thời gian checkin:</strong> hh:mm - dd/MM/YYYY</p>
                    <p><strong>Thời gian checkout:</strong> hh:mm - dd/MM/YYYY</p>
                    <p><strong>Giá:</strong> {giá}/ngày</p>
                </div>
            </div>
        </section>

        <section class="customer-info">
            <h3>THÔNG TIN KHÁCH HÀNG</h3>
            <p><strong>Tên:</strong> ___________</p>
            <p><strong>SDT:</strong> ___________</p>
            <p><strong>CCCD:</strong> ___________</p>
        </section>

        <section class="payment">
            <h3>THANH TOÁN</h3>
            <p><strong>Tổng tiền phòng:</strong> XXX.XXX.XXX VND</p>
            <p><strong>Tiền cọc:</strong> XX.XXX VND</p>
            <p><strong>Trạng thái:</strong> Đã cọc</p>
            <p><strong>Ngày đặt phòng:</strong> HH:mm:ss - dd/MM/YYYY</p>
            <button class="payment-btn">ĐÃ THANH TOÁN CỌC</button>
        </section>
    </main>



