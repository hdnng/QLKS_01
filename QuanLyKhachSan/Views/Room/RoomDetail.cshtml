@model QuanLyKhachSan.Models.Room

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/roomdetail.css" asp-append-version="true" />

<main role="main" class="pb-3">
    <div class="search-box text-center mb-4">
        <input type="text" class="form-control d-inline-block w-50" placeholder="Tìm kiếm..." />
        <button class="btn btn-primary">Tìm kiếm</button>
    </div>

    <section class="room-details mb-5">
        <h2 class="text-center">CHI TIẾT PHÒNG</h2>
        <div class="row align-items-center">
            <div class="col-md-4 text-center">
                <div class="room-image bg-light" style="height: 200px;">
                    <img src="~/img/@Model.IMGUrl") alt="Room Image" style="height: 100%; width: 100%; object-fit: cover;" />
                </div>
            </div>
            <div class="col-md-8">
                <p><strong>Số phòng:</strong> @Model.RoomID</p>
                <p><strong>Kiểu phòng:</strong> @Model.RoomType?.RoomTypeName</p>
                <p><strong>Sức chứa:</strong> @Model.Capacity người</p>
                <p><strong>Giá:</strong> @Model.PricePerDay VND</p>
                <button class="btn btn-success">ĐẶT PHÒNG</button>
            </div>
        </div>
    </section>

    <section class="room-info mb-5">
        <h2 class="text-center">THÔNG TIN PHÒNG</h2>
        <div class="room-description bg-light p-4 text-center" style="height: 200px;">@Model.Description</div>
    </section>

    <section class="recommended-rooms">
        <h2 class="text-center">Phòng danh cho bạn</h2>
        <div class="row">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="room-image bg-light" style="height: 150px;"></div>
                            <p>Số phòng</p>
                            <p>Kiểu phòng</p>
                            <p>Sức chứa</p>
                            <p>Giá</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</main>
